{
  "variables": {
    "aws_access_key": "",
    "aws_secret_key": ""
  },

  "builders": [{
    "type": "amazon-ebs",
    "access_key": "{{user `aws_access_key`}}",
    "secret_key": "{{user `aws_secret_key`}}",
    "region": "us-east-1",
    "source_ami": "ami-059eeca93cf09eebd",
    "instance_type": "t3.xlarge",
    "ssh_username": "ubuntu",
    "ami_name": "canvas-eli {{timestamp}}",
    "ami_block_device_mappings": [{
      "device_name": "/dev/sdh",
      "volume_size": 50
      }],
    "ami_description": "Pre-backed AMI with Packer for Canvas",
    "subnet_id": "subnet-22b5b046"
  }],
  "provisioners": [{
    "type": "chef-solo",
    "cookbook_paths": ["../chef/cookbooks"],
    "roles_path": "../chef/roles",
    "run_list": ["role[canvas]"]
    }]
}
